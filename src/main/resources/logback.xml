<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">

        <encoder>

            <pattern>%d %5p | %-35logger{35} | %m %n</pattern>

        </encoder>

    </appender>

    <logger name="com.goeuro">

        <level value="INFO" />
        
        <appender-ref ref="CONSOLE" />

    </logger>

    <logger name="org.springframework">

        <level value="WARN" />
        
        <appender-ref ref="CONSOLE" />

    </logger>

</configuration>